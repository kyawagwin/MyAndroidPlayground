<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.passioncreativestudio.myandroidplayground">

    <uses-feature android:name="android.hardware.camera2" android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CustomerListCABActivity" />
        <activity
            android:name=".AlbumListActivity"
            android:label="@string/album_list_title"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TabbedActivity"
            android:label="Tabbed Activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TabbarActivity"
            android:label="@string/title_activity_tabBar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TakePhotoActivity"
            android:label="Take Photo"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>